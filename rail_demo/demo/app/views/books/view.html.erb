<h1>Add new book</h1>

<%= form_tag :action => 'create' do %>
<p><label for = "aaaaaa">Title</label>:

<%= text_field 'books', 'title' %></p>
<p><label for = "aaaaaa">Price</label>:

<%= text_field 'books', 'price' %></p>
<p><label for = "aaaaaa">Subject</label>:

<%= collection_select(:books, :subject_id, @subjects, :id, :name, prompt: true) %></p>
<p><label for = "aaaaa">Description</label><br/>

<%= text_area 'books', 'description' %></p>
<%= submit_tag "Create" %>

<% end -%>
<%= link_to 'Back', {:action => 'list'} %>
