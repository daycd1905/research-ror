<h1>Sale product</h1>

<%= simple_form_for @order do |f| %>
	
	<fieldset>
		<legend>Product Info: </legend>
		<%= f.simple_fields_for :order_details do |ff| %>
			<%= render "order_detail_fields", f: ff %>
		<% end %>
		<%= link_to_add_fields "Add Product", f, :order_details %>

	</fieldset>

	<%= f.submit "Create" %>

<% end %>

